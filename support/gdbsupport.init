
define EnableITMAccess
	set language c
	set *0xE000EDFC |= 0x1000000
	set *0xE0000FB0 = 0xC5ACCE55
	set language auto
end

define BaseSWOSetup
	set language c
	set *0xE0040304 = 0x100
	set *0xE00400F0 = 2
	set *0xE0040010 = $arg0
	set *0xE0001000 &= ~(0x8000)
	set *0xE0001000 |= 0xBFF
	set language auto
end

define SetITMTimestampFrequency
	set language c
	set *0xE0000E80 &= ~(0x3 << 10)
	set *0xE0000E80 |= ($arg0 << 10)
	set language auto
end

define SetITMTimestampPrescale
	set language c
	set *0xE0000E80 &= ~(0x3 << 8)
	set *0xE0000E80 |= ($arg0 << 8)
	set language auto
end

define EnableITMPorts
	set language c
	set *0xE0000E00 |= $arg0
	set language auto
end

define DisableITMPorts
	set language c
	set *0xE0000E00 &= ~($arg0)
	set language auto
end

define SetITMId
	set language c
	set *0xE0000E80 &= ~(0x7F << 16)
	set *0xE0000E80 |= ($arg0 << 16)
	set language auto
end

define ITMGlobalEnable
	set language c
	set $busy = ((*0xE0000E80 & 0x800000))
	while ($busy)
		set $busy = ((*0xE0000E80 & 0x800000))
	end

	set *0xE0000E80 |= 0x1

	set $busy = ((*0xE0000E80 & 0x800000))
	while ($busy)
		set $busy = ((*0xE0000E80 & 0x800000))
	end
	set language auto
end

define ITMGlobalDisable
	set language c
	set $busy = ((*0xE0000E80 & 0x800000))
	while ($busy)
		set $busy = ((*0xE0000E80 & 0x800000))
	end

	set *0xE0000E80 &= ~(0x1)

	set $busy = ((*0xE0000E80 & 0x800000))
	while ($busy)
		set $busy = ((*0xE0000E80 & 0x800000))
	end
	set language auto
end

